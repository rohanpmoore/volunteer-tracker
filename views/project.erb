<h3><%= @project.title %></h3>

<h4>Volunteers assigned to this project:</h4>
<% if @volunteers.any? %>
<ul>
  <% @volunteers.each do |volunteer| %>
  <li><a href="/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></li>
  <% end %>
</ul>

<% else %>
<p>There are no volunteers currently assigned to this project!</p>
<% end %>

<a href="/projects/<%= @project.id %>/edit">Edit Project</a>
