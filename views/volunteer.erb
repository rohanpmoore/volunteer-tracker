<h3>Volunteer Name: <%= @volunteer.name %></h3>

<h4>Update Volunteer:</h4>
<form action="/volunteers/<%= @volunteer.id %>/update" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="name">Change volunteer's name:</label>
  <input type="text" name="name">
  <button type="submit" name="button">Update Volunteer</button>
</form>

<% if(@volunteer.project_id == 0) %>
<h4>Add to project:</h4>
<form action="/volunteers/<%= @volunteer.id %>/add_project" method="post">
  <input type="hidden" name="_method" value="patch">
  <select name="project_id">
    <% @projects.each do |project| %>
    <option value="<%= project.id %>"><%= project.title %></option>
    <% end %>
  </select>
  <button type="submit" name="button">Add Project</button>
</form>

<% else %>
<h4>Add hours worked:</h4>
<form action="/volunteers/<%= @volunteer.id %>/add_hours" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="hours"></label>
  <input type="number" name="hours" required="true">
  <button type="submit" name="button">Add Hours</button>
</form>
<% end %>

<p><a href="/">To Main Page</a></p>
